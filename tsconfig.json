{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es6"
  },

  "exclude": [
    "node_modules"
  ]
}
